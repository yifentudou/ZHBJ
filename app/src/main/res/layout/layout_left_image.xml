<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_img"
    android:layout_width="120dp"
    android:layout_height="80dp"
    android:scaleType="fitXY"
    android:padding="1dp"
    android:src="@drawable/ic_pic_default"
    android:background="@android:color/black"/>
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_img"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/txt_item_title"
        android:textColor="@android:color/black"
        android:text="错误: 不兼容的类型: 缺少返回值错误: 不兼容的类型: 缺少返回值错误: 不兼容的类型: 缺少返回值错误: 不兼容的类型: 缺少返回值"/>
<TextView
    android:id="@+id/tv_data"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2001-02-12 12:00"
    android:layout_alignBottom="@id/iv_img"
    android:layout_alignLeft="@id/tv_text"
    android:textColor="@color/colorGray"
    android:textSize="@dimen/txt_data"/>
</RelativeLayout>